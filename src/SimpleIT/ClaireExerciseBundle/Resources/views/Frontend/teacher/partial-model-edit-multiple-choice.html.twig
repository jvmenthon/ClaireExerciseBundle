<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="col-centered">
            <h5>{{ 'question.melange.titre'|trans }}</h5>
            <span data-ng-click="model.content.shuffle_questions_order=!model.content.shuffle_questions_order">
                <span class="glyphicon" ng-class="{'glyphicon-check': model.content.shuffle_questions_order, 'glyphicon-unchecked': !model.content.shuffle_questions_order}"></span>
                {{ 'question.melange.melanger'|trans }}
            </span> &nbsp;&nbsp;
            <span data-ng-click="model.content.shuffle_questions_order=!model.content.shuffle_questions_order">
                <span class="glyphicon" ng-class="{'glyphicon-unchecked': model.content.shuffle_questions_order, 'glyphicon-check': !model.content.shuffle_questions_order}"></span>
                {{ 'question.melange.pas_melanger'|trans }}
            </span>
        </div>
    </div>
</div>

<accordion>
    <accordion-group class="panel panel-primary" name="accordionBlock"
                     data-ng-repeat="block in model.content.question_blocks track by $index"
                     ng-init="openFirst('accordionBlock', $index); metadata_constraints = block.resource_constraint.metadata_constraints; blockTypes = []"
                     is-open="openFirstBlocks.accordionBlock[$index]">
        <accordion-heading class="panel-heading">
            <div class="row"
                 title="{{ 'question.bloc.texte'|trans }}">
                <div class="col-xs-11">
                    {{ 'question.bloc.titre'|trans }}&nbsp;<span class="caret"></span>
                </div>
                <div class="col-xs-1">
            <span data-ng-click="$event.stopPropagation();modelRemoveField(model.content.question_blocks, $index)"
                  class="glyphicon glyphicon-remove"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12"
                     title="{{ 'question.nombre.question.texte'|trans }}">
                    <h5>{{ 'question.nombre.question.titre'|trans }}</h5>
                    <input type="number" ng-click="$event.stopPropagation();" ng-model="block.number_of_occurrences" class="form-control" style="height: 25px">
                </div>
                <div class="col-xs-6">
                    <h5 title="{{ 'question.nombre.proposition.text'|trans }}{{ 'question.nombre.proposition.ignore'|trans }}">
                        {{ 'question.nombre.proposition.titre'|trans }}
                    </h5>
                    <input type="number" ng-model="block.max_number_of_propositions" ng-click="$event.stopPropagation();" class="form-control" style="height: 25px">
                </div>
                <div class="col-xs-6">
                    <h5 title="{{ 'question.nombre.proposition_juste.text'|trans }}{{ 'question.nombre.proposition.ignore'|trans }}">
                        {{ 'question.nombre.proposition_juste.titre'|trans }}
                    </h5>
                    <input type="number" ng-model="block.max_number_of_right_propositions" ng-click="$event.stopPropagation();" class="form-control" style="height: 25px">
                </div>
            </div>
        </accordion-heading>
        <div ng-include src="BASE_CONFIG.urls.partials.teacher.resource.block"></div>
    </accordion-group>

    <div class="panel panel-primary">
        <div class="panel-heading" data-ng-click="modelAddBlockField(model.content.question_blocks)">
            <div class="row">
                <div class="col-xs-1">
                    <span class="glyphicon glyphicon-plus"></span>
                </div>
                <div class="col-xs-10"></div>
                <div class="col-xs-1"></div>
            </div>
        </div>
    </div>

</accordion>
